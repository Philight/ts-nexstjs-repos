{
  trailingComma: 'all',
  arrowParens: 'avoid',
  printWidth: 160,
  tabWidth: 2,
  semi: true,
  singleQuote: true,
  jsxSingleQuote: true,
  bracketSpacing: true,
  useTabs: false,
  embeddedLanguageFormatting: 'auto',
  endOfLine: 'lf',
  htmlWhitespaceSensitivity: 'css',
  proseWrap: 'preserve',
  quoteProps: 'as-needed',
  plugins: ['prettier-plugin-tailwindcss', '@trivago/prettier-plugin-sort-imports'],
  importOrderSeparation: true,
  importOrderSortSpecifiers: true,
  importOrder: [
    '<THIRD PARTY MODULES>',
    '^@components/(.*)$',
    '^@containers/(.*)$',
    '^@layout/(.*)$',
    '^@ui/(.*)$',
    '^@hooks/(.*)$',
    '^@redux/(.*)$',
    '^@styles/(.*)$',
    '^@services/(.*)$',
    '^@utils/(.*)$',
    '^../(.*)',
    '^./(.*)',
  ],
}
